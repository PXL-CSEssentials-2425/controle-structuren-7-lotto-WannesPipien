<Window x:Class="Lotto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lotto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="calculateButton" Content="Bereken" HorizontalAlignment="Left" Margin="497,79,0,0" VerticalAlignment="Top" Height="40" Width="79" Click="calculateButton_Click"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="95,79,0,0" VerticalAlignment="Top" Width="100" Source="/Lotto.png"/>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="230,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" Height="211"/>
        <Button x:Name="clearButton" Content="Wissen" HorizontalAlignment="Left" Margin="497,144,0,0" VerticalAlignment="Top" Height="40" Width="79" Click="clearButton_Click"/>
        <Button x:Name="closeButton" Content="Afsluiten" HorizontalAlignment="Left" Margin="497,217,0,0" VerticalAlignment="Top" Height="40" Width="79" Click="closeButton_Click"/>

    </Grid>
</Window>
